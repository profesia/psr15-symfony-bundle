{
	"name": "profesia/psr15-symfony-bundle",
	"description": "Symfony bundle designed to bring PSR-15 fashioned middlewares to Symfony 5+ applications",
	"keywords": [
		"psr-15",
		"symfony",
		"bundle",
		"middleware",
		"handler"
	],
	"authors": [
		{
			"name": "Matej BÃ¡dal",
			"email": "matejbadal@gmail.com"
		}
	],
	"require": {
		"php": "~8.1 || ~8.2 || ~8.3",
		"symfony/psr-http-message-bridge": "~6.0 || ~7.0",
		"symfony/console": "~6.0 || ~7.0",
		"myclabs/deep-copy": "~1.10",
		"symfony/dependency-injection": "~6.0 || ~7.0",
		"symfony/http-kernel": "~6.0 || ~7.0",
		"symfony/cache": "~6.0 || ~7.0",
		"symfony/config": "~6.0 || ~7.0",
		"symfony/routing": "~6.0 || ~7.0",
		"psr/http-server-handler": "^1.0",
		"psr/http-server-middleware": "^1.0",
		"php-http/discovery": "^1.19"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.8",
		"mockery/mockery": "^1.4",
		"symfony/browser-kit": "^6.0 || ^7.0",
		"symfony/framework-bundle": "^6.0 || ^7.0",
		"ext-json": "^8.0 || ^8.1 || ^8.2",
		"nyholm/psr7": "^1.8",
		"pestphp/pest": "^1.23"
	},
	"autoload": {
		"psr-4": {
			"Profesia\\Symfony\\Psr15Bundle\\": "src/"
		}
	},
	"scripts": {
		"test": "XDEBUG_MODE=coverage ./vendor/bin/pest",
		"coverage": "XDEBUG_MODE=coverage ./vendor/bin/pest --coverage",
		"analyse": "./vendor/bin/phpstan analyse"
	},
	"license": "MIT",
	"config": {
		"allow-plugins": {
			"php-http/discovery": false,
			"pestphp/pest-plugin": true
		}
	}
}
